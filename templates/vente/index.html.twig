{% extends 'baseadmin.html.twig' %}

{% block title %}Vente index{% endblock %}

{% block body %}
    <h1>Vente index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Typevente</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for vente in ventes %}
            <tr>
                <td>{{ vente.id }}</td>
                <td>{{ vente.date ? vente.date|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ vente.typevente }}</td>
                <td>
                    <a href="{{ path('vente_show', {'id': vente.id}) }}">show</a>
                    <a href="{{ path('vente_edit', {'id': vente.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('vente_new') }}">Create new</a>
{% endblock %}
