{% block body %}
 
  <h1>inscription</h1>


  {{form_start(form)}}

  {{form_row(form.username, {'label': 'Nom d\'utilisateur','attr':
    {'placeholder': 'Nom d\'utilisateur ...'}}) }}
  {{form_row(form.email, {'label': 'Adresse email', 'attr': {'placeholder':
